# Use uv to manage Python environment
layout python python3.11

# Activate venv (created by uv venv or uv sync)
if [ -d "venv" ]; then
    source venv/bin/activate
elif [ -d ".venv" ]; then
    source .venv/bin/activate
fi

# Tell uv to use the active environment
export UV_PROJECT_ENVIRONMENT="${VIRTUAL_ENV:-venv}"
unset PS1